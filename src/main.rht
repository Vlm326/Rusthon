func test_for_c() {
    print("== C-style for ==")
    for (var i: int = 0; i < 5; i = i + 1) {
        print("i =", i)
    }

    print("== for(;;) бесконечный, но мы выходим по if ==")
    var j: int = 0
    for (; ; j = j + 1) {
        print("j =", j)
        if (j >= 2) {
            return
        }
    }
}
test_for_c()